<div class="container">

    <div class="row">
        <div class="page-header">
            <h1>会員一覧</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10 table-responsive">
            <table class="table">
                <tr class="active">
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                <tr>
                <% @users.each do |user| %>
                    <tr>
                        <td>
                            <%= user.id%>
                        </td>
                        <td>
							<%= link_to user.last_name+user.first_name, admin_user_path(user.id) %>
                        </td>
                        <td>
                            <%= user.email%>
                        </td>
                        <td>
                            <% if user.validation == true %>
								<%= "有効" %>
							<% else %>
								<%= "退会済み" %>
							<% end %>
                        </td>
                    <tr>
                <% end %>
            </table>
        </div>
    </div>

    <%# kaminariのページング記述 %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <%= paginate @users %>
        </div>
    </div>

</div>
