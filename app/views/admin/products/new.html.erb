<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h1>商品新規登録</h1>
        </div>
    </div>
    <!--商品画像画像登録-->
    <div class="row">
        <div class="col-xs-5">
            <%= attachment_image_tag @product, :image, :fill, 100, 100,format: 'jpeg', fallback: "logo.png", size:'300x300' %>
            <%= form_for(@product, url:admin_products_path) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <%= f.attachment_field :image, placeholder:"商品画像" %>
        </div>
    </div>
    <!--商品項目入力欄-->
            <div class="col-xs-5">
                <label>商品名</label>
                <%= f.text_field :name %> <br>

                <label>商品説明</label>
                <%= f.text_area :introduction %> <br>

                <label>ジャンル</label>
                <%= f.collection_select :genre_id, Genre.all, :id, :name %>  <br>

                <label>税抜価格</label>
                <%= f.text_field :price %> 円 <br>

                <label>販売ステータス</label>
                <%= f.select :validation, {
                    "販売中": true,
                    "売り切れ": false
                } %>  <br>
                <%= f.submit "新規登録"  %>
            </div>
        <% end %>
    
</div>
