<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル一覧・追加</h1>
      <br>
      <div class="form-horizontal" role="form">
        <%= form_for(@genre, url: admin_genres_path) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <div class="col-xs-8">
              <%# ジャンル名の入力フォーム %>
              <%= f.label :name, "ジャンル"%>
              <%= f.text_field :name, autofocus: true %>

              <%# 有効、無効のラジオボタン %>
              <%= f.radio_button :validation, true %>
              <%= f.label :validation, "有効", value: true, style: "display: inline-block;" %>
              <%= f.radio_button :validation, false %>
              <%= f.label :validation, "無効", value: false, style: "display: inline-block;" %>

              <%# 「追加」ボタン %>
              <%= f.submit "追加", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-6">
          <table class="table">
            <tr>
              <th>ジャンル</th>
              <th>状態</th>
              <th></th>
            </tr>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td>
                  <%= genre.validation ? "有効" : "無効" %>
                </td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary"  %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
