<div class="container">
	<h1>注文履歴一覧</h1>
	
	<div class="row">
		<div class="col-xs-10">
			<table class="table table-hover table-bordered">
				<thead>
					<tr>
						<th>注文日</th>
						<th>配送先</th>
						<th>注文商品</th>
						<th>支払金額</th>
						<th>ステータス</th>
						<th>注文詳細</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
						<tr>
							<td>
								<%= order.created_at.strftime('%Y/%m/%d') %>
							</td>
							<td>
								<p><%= order.postal_code %></p>
								<p><%= order.address %></p>
								<p><%= order.addressee %></p>
							</td>
							<td>

							</td>
							<td>
								<%= order.billing %>円
							</td>
							<td>
								<% case order.order_status %>
					              <% when "unpaid" %>
					                <%= "入金待ち" %>
					              <% when "paid" %>
					                <%= "入金確認" %>
					              <% when "working" %>
					                <%= "製作中" %>
					              <% when "ready" %>
					                <%= "発送準備中" %>
					              <% when "shipped" %>
					                <%= "発送済み" %>
					            <% end %>				
					        </td>
							<td>
								<%= link_to "表示する", order_path(current_user.id), class: "btn btn-primary btn-block" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<%= OrderHistory.includes(:product).order("products.name DESC") %>
<% @products.each do |product|%>
<%= product.name %>
<% end %>
