                        </tr>
                        <tr>
                            <th class="col-xs-4">お届け先</th>
                            <td class="col-xs-8">
                                <%# <%=  @order_histories.postal_code %> %>
                                <%# <%= @order_history.address %><br> %>
                                <%# <%= @order_history.addressee %> %>
                            </td>
                        </tr>
                    </table>
                </div>

                    <%= link_to "購入を確定する", orders_path(@ordered_products), method: :post, class:"btn btn-primary" %>
        </div>
    </div>
</div>