<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th class="active text-center">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, search_products_path(genre_name: "#{genre.name}"), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
